@page
@model RegisterModel
@{
    ViewData["Title"] = "注册";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-4">
            @* 这个asp-route-xxxxx就是asp-route-{value}这个Tag Helper *@
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>创建新账户</h4>
            <hr/>

            @* 所有错误的总结  把他注释了就没了   asp-validation-summary：验证结果总结 这些asp-开头的东西，我也要去找找文档*@
            @* <div asp-validation-summary="All" class="text-danger"></div> *@


            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="off"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">注册</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
