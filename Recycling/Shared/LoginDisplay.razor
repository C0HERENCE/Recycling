<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" style="text-decoration: none">你好, @context.User.Identity.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="nav-link btn btn-link">退出</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-sm btn-outline-secondary mx-1" href="Identity/Account/Register">注册</a>
        <a class="btn btn-sm btn-outline-secondary mx-1" href="Identity/Account/Login">登录</a>
    </NotAuthorized>
</AuthorizeView>