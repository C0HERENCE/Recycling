@inherits LayoutComponentBase

<AuthorizeView Roles="employee">
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu/>
            </div>
            <div class="main">
                <div class="top-row px-4 auth">
                    <LoginDisplay/>
                </div>

                <div class="content">
                    @Body
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <h3 class="text-center">
            无权限！ 请先
            <a href="/login">登录回收员</a>
            ！
        </h3>
    </NotAuthorized>
</AuthorizeView>